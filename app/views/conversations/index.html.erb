<%= content_for :title do %> <%= "Messages" %> <% end %>




<div class="left">
            <ul class="nav nav-pills nav-stacked">
            <p><%= link_to 'New Message', new_message_path, class: 'btn btn-lg btn-primary' %></p>
            <%= mailbox_section 'inbox', @box %>
            <%= mailbox_section 'sent', @box %>
            <%= mailbox_section 'trash', @box %>
