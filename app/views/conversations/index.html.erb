            <%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete,
                   data: {confirm: 'Are you sure?'} %>
  <% end %>
            </ul>
</div>

    <div class="center">
  <div class="col-sm-9">
  <ul class="list-group">
    <%= render partial: 'conversations/conversation', collection: @conversations %>
    </ul>
    </div>
</div>